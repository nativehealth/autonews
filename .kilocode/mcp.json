{
  "mcpServers": {
    "puppeteer": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--init",
        "-e",
        "DOCKER_CONTAINER=true",
        "mcp/puppeteer"
      ],
      "alwaysAllow": [
        "puppeteer_evaluate",
        "puppeteer_close"
      ]
    }
  }
}